{
    "compilerOptions": {
        "target": "ES2016",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSourceMap": true,
        "rootDir": "./src/",
        "jsx": "react",
        "moduleResolution": "Node",
        "outDir": "./js",
        "noUnusedLocals": true,
        "noEmitOnError": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}